.knob {
    min-width: 26px;
    min-height: 20px;
    --track-width: 15;
    --track-color: rgb(48, 48, 48);
    --value-color: rgb(192, 192, 192);
    --label-color: white;
    margin-left: 5px;
    margin-right: 5px;
    margin-top: 5px;
    margin-bottom: 5px;
    flex-direction: row;
    justify-content: center;
    width: 80px;
    height: 100px;
}

.knob__label {
    -unity-text-align: lower-left;
    color: var(--label-color);
}
