Label {
    margin-top: 0;
    margin-right: 0;
    margin-bottom: 0;
    margin-left: 0;
    padding-top: 0;
    padding-right: 0;
    padding-bottom: 0;
    padding-left: 0;
}

#profile-container {
    flex-direction: row;
    width: 640px;
    height: 144px;
    padding-top: 8px;
    padding-right: 32px;
    padding-bottom: 8px;
    padding-left: 8px;
    background-color: rgb(255, 248, 232);
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
    border-bottom-left-radius: 5px;
    margin-top: 8px;
    margin-right: 8px;
    margin-bottom: 8px;
    margin-left: 8px;
}

#portrait {
    width: 128px;
    height: 128px;
}

#portrait-shadow {
    position: absolute;
    top: 12px;
    left: 12px;
    width: 128px;
    height: 128px;
    background-color: rgba(0, 0, 0, 0.62);
}

#display-name {
    font-size: 54px;
    -unity-font-definition: url("project://database/Assets/Common/InriaSerif-Bold%20SDF.asset?fileID=11400000&guid=55f475540810f4098b9cc3b651ea9671&type=2#InriaSerif-Bold SDF");
    margin-left: 36px;
    -unity-text-align: middle-left;
}

#info-column {
    align-self: flex-start;
}

#field-label {
    font-size: 20px;
    -unity-font-definition: url("project://database/Assets/Common/InriaSerif-Italic%20SDF.asset?fileID=11400000&guid=aa7749140ea984086b90e27e7cc67636&type=2#InriaSerif-Italic SDF");
    -unity-text-align: lower-left;
    translate: 0 -4px;
}

.fieldRow {
    flex-direction: row;
    border-top-width: 1.5px;
    border-right-width: 1.5px;
    border-bottom-width: 1.5px;
    border-left-width: 1.5px;
    width: 160px;
    justify-content: flex-end;
    height: 58px;
}

.fieldValue {
    padding-left: 8px;
    -unity-font-definition: url("project://database/Assets/Common/InriaSerif-Italic%20SDF.asset?fileID=11400000&guid=aa7749140ea984086b90e27e7cc67636&type=2#InriaSerif-Italic SDF");
    translate: 0 2px;
    font-size: 48px;
    -unity-text-align: middle-left;
}
